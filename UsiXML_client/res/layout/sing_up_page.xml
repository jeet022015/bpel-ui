<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/main" 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#CEE3F6"
    android:orientation="vertical" >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/linearLayoutLogin1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/imageViewLogin1"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="40sp"
                    android:scaleType="center"
                    android:src="@drawable/usiwsc" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayoutLogin2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <EditText
                    android:id="@+id/signUpLogin"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30sp"
                    android:hint="Your Login" >

                    <requestFocus />
                </EditText>

                <EditText
                    android:id="@+id/signUpPw"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"
                    android:layout_marginTop="30sp"
                    android:hint="Your Password"/>

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30sp"
                    android:text="Role:"
                    android:textColor="#000000"
                    android:textAppearance="?android:attr/textAppearanceLarge" />

                <RadioGroup
                android:id="@+id/radioRoles"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:tag="optionReturn" >

	                <RadioButton
	                    android:id="@+id/trainOp1"
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:checked="true"
	                    android:text="employee"
	                    android:textColor="#000000"/>
            </RadioGroup>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayoutLogin3"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical" >

                <Button
                    android:id="@+id/singup"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="30sp"
                    android:text="Sing up" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>