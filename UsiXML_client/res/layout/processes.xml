<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#FFFFFF"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/linearLayoutProcesses1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#CEE3F6" >

        <ImageView
            android:id="@+id/imageViewProcesses1"
            android:layout_width="110dp"
            android:layout_height="82dp"
            android:src="@drawable/usiwsc" />

        <TextView
            android:id="@+id/textViewProcesses1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10sp"
            android:layout_marginTop="5sp"
            android:shadowColor="#000000"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="1.5"
            android:text="Usable uSer interface for Interactive Web Service Composition"
            android:textAppearance="?android:attr/textAppearanceMedium" />
    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollViewProcesses1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#EEEEEE" >

        <LinearLayout
            android:id="@+id/mainLayoutProcesses"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" >

        </LinearLayout>
    </ScrollView>
        
</LinearLayout>